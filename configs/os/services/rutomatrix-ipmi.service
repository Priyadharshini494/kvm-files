[Unit]
Description=PiKVM - IPMI to Rutomatrix proxy
After=rutomatrix.service

[Service]
User=rutomatrix-ipmi
Group=rutomatrix-ipmi
Type=simple
Restart=always
RestartSec=3
AmbientCapabilities=CAP_NET_BIND_SERVICE

ExecStart=/usr/bin/rutomatrix-ipmi --run
TimeoutStopSec=3

[Install]
WantedBy=multi-user.target
